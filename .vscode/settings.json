{
  "elixirLS.projectDir": "backend",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,

  "prettier.configPath": "./frontend/.prettierrc",
  "prettier.prettierPath": "./frontend/node_modules/prettier",

  "svelte.plugin.svelte.format.config.prettierPath": "./frontend/node_modules/prettier",
  "svelte.plugin.svelte.format.config.configPath": "./frontend/.prettierrc",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  }
}
